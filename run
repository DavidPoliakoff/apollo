#
#  Set up caliper to use SOS:
#
export CALI_SERVICES_ENABLE="aggregate:event:timestamp:sos" 
export CALI_SOS_TRIGGER_ATTR="iteration#rajaben"
export CALI_LOG_VERBOSITY=0

# Usage:
#   ./build/examples/rajaben/rajaben [OPTION...]
# 
#   -h, --help     Display this message
#   -v, --verbose  Display verbose status messages
# 
#  Experiment options:
#   -b, --behavior arg          How to explore parameter space
#                               [static-max|sweep|random] (default: random)
#   -i, --iter-max arg          Limit to the # of times Apollo region is
#                               iterated (default: -1)
#   -n, --vector-size-min arg   Min. size of the (int) vector (default: 10000)
#   -x, --vector-size-max arg   Max. size of the (int) vector (default: 10000)
#   -s, --vector-size-step arg  Growth amount when sweeping multiple (int)
#                               vector lengths (default: 1)
#   -d, --delay-usec arg        Unmeasured delay between RAJA loop iterations
#                               (default: 0)
# 

#
# Launch the synthetic benchmark:
#
./build/examples/rajaben/rajaben  --verbose                 \
                                  --behavior=sweep          \
                                  --iter-max -1             \
                                  --vector-size-min 1000000 \
                                  --vector-size-max 2000000 \
                                  --vector-size-step 10000  \
                                  --delay-usec 1000
