#!/usr/bin/env python
import sys

import pandas as pd

from rlsl.viz.bar import plot_bars,plot_importances


APPS = ['lulesh', 'ares']


def main():
    for app in APPS:
        df = pd.read_csv('%s_accuracy_loop.csv' % app)
        df_all = pd.read_csv('%s_accuracy_all.csv' % app)

        plot_bars('%s-bars.pdf' % app, pd.concat([df, df_all]))
        #plot_bars('%s-bars.pdf' % app, df)

    for app in APPS:
        df = pd.read_csv('%s-importances.csv' % app)
        plot_importances('%s-importance-chart.pdf' % app, df)

    return 0


if __name__ == "__main__":
    sys.exit(main())
